AUTH_SECRET="" # Added by `npx auth secret`. Read more: https://cli.authjs.dev
HMAC_SECRET_KEY='some-secret' # create this by running `openssl rand -base64 32`
AUTH_URL='' # For testing use your ngrok URL (e.g. https://xxxx.ngrok-free.app); for production use your production URL
# AUTH_TRUST_HOST=true # Set when using ngrok/proxy (or trustHost is set in auth config)

# World ID (required for post question/answer and accept answer)
# Create Incognito Actions at https://developer.worldcoin.org → your app → Incognito Actions.
# The values below MUST match the action identifiers in the Portal exactly (e.g. proof-board-post-question).
NEXT_PUBLIC_APP_ID=app_xxxxxxxxxxxxx
NEXT_PUBLIC_ACTION_POST_QUESTION=proof-board-post-question
NEXT_PUBLIC_ACTION_POST_ANSWER=proof-board-post-answer
NEXT_PUBLIC_ACTION_ACCEPT_ANSWER=proof-board-accept-answer
# Optional (if you add like/view verification later):
# NEXT_PUBLIC_ACTION_LIKE_NOTE=proof-board-like-note
# NEXT_PUBLIC_ACTION_VIEW_NOTE=proof-board-view-note

# DB – Neon pooler: add &pgbouncer=true to DATABASE_URL to avoid "cached plan must not change result type".
# DATABASE_URL="postgresql://user:pass@host-pooler.../neondb?sslmode=require&pgbouncer=true"

# Run without database (fake data only; new posts last until restart). Skips World ID verification.
# USE_FAKE_DATA=true
