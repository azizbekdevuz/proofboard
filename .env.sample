AUTH_SECRET="" # Added by `npx auth secret`. Read more: https://cli.authjs.dev
HMAC_SECRET_KEY='some-secret' # create this by running `openssl rand -base64 32`
AUTH_URL='' # For testing this should be your NGROK URL and for production this should be your production URL

# World ID (required for post question/answer and accept answer)
# Get these from https://developer.worldcoin.org â€“ create an app and add Actions.
APP_ID=app_xxxxxxxxxxxxx
NEXT_PUBLIC_APP_ID=app_xxxxxxxxxxxxx
NEXT_PUBLIC_ACTION_POST_QUESTION=your_action_post_question
NEXT_PUBLIC_ACTION_POST_ANSWER=your_action_post_answer
NEXT_PUBLIC_ACTION_ACCEPT_ANSWER=your_action_accept_answer

# Run without database (fake data only; new posts last until restart). Skips World ID verification.
# USE_FAKE_DATA=true

# Dev only: skip World ID verification so you can post without World App (set both, only when NODE_ENV !== production).
# SKIP_VERIFICATION=true
# NEXT_PUBLIC_SKIP_VERIFICATION=true