datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  wallet    String   @unique
  username  String?
  createdAt DateTime @default(now())
  questions Question[]
  answers   Answer[]
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  questions Question[]
}

model Question {
  id          String   @id @default(cuid())
  categoryId  String
  userId      String
  text        String   // <= 300 chars enforced in app + server
  createdAt   DateTime @default(now())
  acceptedId  String?  // Answer.id
  category    Category @relation(fields: [categoryId], references: [id])
  user        User     @relation(fields: [userId], references: [id])
  answers     Answer[]
}

model Answer {
  id         String   @id @default(cuid())
  questionId String
  userId     String
  text       String   // <= 300 chars enforced in app + server
  createdAt  DateTime @default(now())
  question   Question @relation(fields: [questionId], references: [id])
  user       User     @relation(fields: [userId], references: [id])
}

model ActionProof {
  // Prevent replay / double-use:
  // store nullifier_hash per action (and optionally per category/day)
  id           String   @id @default(cuid())
  action       String
  nullifier    String
  createdAt    DateTime @default(now())

  @@unique([action, nullifier])
}