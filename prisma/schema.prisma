datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  wallet    String   @unique
  username  String?
  createdAt DateTime @default(now())
  notes     Note[]
}

enum NoteType {
  QUESTION
  ANSWER
}

model Note {
  id               String   @id @default(cuid())
  category         String   // category id from fixed list, not a DB relation
  type             NoteType
  referenceId      String   @default("") // "" for questions, question Note.id for answers
  text             String   // <= 300 chars for QUESTION, <= 500 chars for ANSWER
  userId           String
  viewsCount       Int      @default(0)
  likesCount       Int      @default(0)
  answersNum       Int      @default(0) // only meaningful for QUESTION; 0 for ANSWER
  acceptedAnswerId String   @default("") // only for QUESTION: the accepted answer Note.id ("" = none)
  isArchived       Boolean  @default(false) // owner can archive their own questions
  createdAt        DateTime @default(now())
  user             User     @relation(fields: [userId], references: [id])
}

model ActionProof {
  // Prevent replay / double-use:
  // store nullifier_hash per action (and optionally per category/day)
  id           String   @id @default(cuid())
  action       String
  nullifier    String
  createdAt    DateTime @default(now())

  @@unique([action, nullifier])
}
